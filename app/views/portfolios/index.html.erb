  <main role="main">
    <!-- Portfolio Cards section -->
    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <p>
              <%= link_to "Create New Portfolio Item", new_portfolio_url if logged_in?(:site_admin) %>
            </p>
          </div>
        </div>
        <div class="row" data-controller="<%= 'drag' if logged_in?(:site_admin) %>" data-drag-url="<%=  '/portfolios/:id/move' if logged_in?(:site_admin) %>">
          <%= render partial: 'portfolio_item', collection:  @portfolio_items %>
        </div>
      </div>
    </div>
    <!-- End Portfolio Cards section -->
  </main>
